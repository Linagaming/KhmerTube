@charset "utf-8";
/* CSS Document */

body{
	margin: 0;
	padding: 0;
	background: hsla(0,0%,5%,1.00);
	color: #fff;
}
h1,h2,h3,h4,h5,h6,a,ul{
	text-decoration: none;
	margin: 0;
	box-sizing: border-box;
	list-style-type: none;
}
.play-video .play .title .text .tag{
/*	background: hsla(359,100%,73%,1.00);*/
	width: 175px;
	overflow: hidden;
}
.play-video .play .title .text .tag a{
	color: hsla(192,95%,46%,1.00);
	padding-right: 5px;
	margin-bottom: 5px;
	font-size: 14px;
}
.title .text .tag a:hover{
	color: hsla(211,100%,50%,1.00);
}
div{
	box-sizing: border-box;
}
::-webkit-scrollbar {
  width: 5px;
}

/* Track */
::-webkit-scrollbar-track {
  background: #f1f1f1;
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: hsla(359,100%,62%,1.00);
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: #555;
}
.dropdown{
	z-index: 999;
	width: 100%;
	background: #fff;
	display: none;
	overflow: hidden;
	box-sizing: border-box;
	box-shadow: 0px 10px 20px rgba(0,0,0,0.2);
	float: left;
	position: fixed;
	top: 60px;
}
#clickmore:hover #more{
	display: block;
	height: 300px;
}
.dropdown .close{
	width: 100%;
	background: hsla(359,100%,64%,1.00);
	height: 40px;
	padding: 0 20px;
	box-sizing: border-box;
	transition: 0.3s;
}
.dropdown .close span:nth-child(1){
	float: left;
	font-size: 15px;
	color: #fff;
	font-weight: 700;
	text-transform: uppercase;
	line-height: 40px;
}
.dropdown .close span:nth-child(2){
	float: right;
	line-height: 40px;
	font-size: 15px;
	color: #fff;
	font-weight: 700;
	cursor: pointer;
}
.dropdown ul{
	list-style-type: none;
	padding: 0; 
	margin: 0;
}
.dropdown ul li{
	display: block;
	border-bottom: 1px solid hsla(0,0%,80%,1.00);
}
.dropdown ul li:hover{
	background: hsla(0,0%,95%,1.00);
}
.dropdown ul li a{
	display: block;
	font-size: 16px;
	color: hsla(0,0%,46%,1.00);
	padding: 10px 0;
	margin-left: 10px;
	text-transform: uppercase;
	font-weight: 500;
}
.dropdown ul li a i{
	padding-right: 10px;
}

.manager-play .back-up{
	position: absolute;
	bottom: 50px;
	right: -70px;
	position: fixed;
	z-index: 9;
	cursor: pointer;
/*	background: hsla(237,97%,63%,1.00);*/
	overflow: hidden;
	opacity: 0;
	transition: 0.2s;
	transition-delay: 0.3s;
	width: 70px;
}
.manager-play:hover .back-up{
	opacity: 100;
	right: 0;
}
.manager-play .back-up span{
	margin: 0;
	float: right;
	font-size: 25px;
	margin-bottom: 8px;
}
.manager-play .back-up span i{
	border-radius: 50%;
	color: #fff;
	background:hsla(359,94%,57%,1.00);
	padding: 8px;
	margin: 0;
	float: right;
}

.down{
	opacity: 0;
}

.manager-navigettion{
	background: hsla(0,0%,10%,1.00);
	box-shadow: 0px 5px 30px rgba(0,0,0,0.2);
	position: fixed;
	top: 0;
	left: 0;
	z-index: 999;
	overflow: hidden;
	user-select: none;
}
.box-menu-bars{
	margin: auto;
	overflow: hidden;
}
.menu{
	height: 60px;
	font-family: Roboto;
	color: hsla(0,0%,46%,1.00);
	margin: auto;
	overflow: hidden;
}
.menu .logo{
	line-height: 60px;
	float: left;
	font-size: 25px;
	color: #fff;
	font-weight: 700;
	text-transform: uppercase;
	transition: 0.2s;
}
.menu ul{
	float: right;
}
.menu ul li{
	float: left;
	position: relative;
	margin: 5px 0px;
}
.menu ul li a{
	display: block;
	padding: 0 40px;
	line-height: 50px;
	color: hsla(0,0%,90%,1.00);
	font-size: 23px
}
.menu ul li:hover{
	background: hsla(0,0%,46%,0.03);
	border-radius: 10px 10px 0 0;
	border-bottom: 3px #fff solid;
}
.menu ul li:hover a{
	color: #fff;
}























/*CSS Play Video*/
.manager-play{
	margin-top: 50px;
/*	background: hsla(359,100%,58%,1.00);*/
	padding: 0;
	user-select: none;
}
.play-video{
	overflow: hidden;
	box-sizing: border-box;
}
.play-video .play{
	width: 100%;
	overflow: hidden;
	cursor: pointer;
}
.play-video .play .video{
	width: 200px;
	height: 200px;
}
.play-video .play .title{
	margin-top: 5px;
	font-family: Roboto,Dangrek;
}
.play-video .play .title .text span{
	font-size: 18px;
	color: #fff;
	font-weight: 400;
	line-height: 20px;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: normal;
}
.play-video .play .title .viwes{
	margin-top: 3px;
	overflow: hidden;
}
.play-video .play .title .viwes span{
	font-size: 14px;
	color: hsla(0,0%,65%,1.00);
	font-weight: 400;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: normal;
/*	background: hsla(359,100%,60%,1.00);*/
}
.play-video .play .title .manager-icon{
	width: 100%;
	overflow: hidden;
	padding-bottom: 5px;
	margin-top: -15px;
}
.play-video .play .title .like-icon{
	float: right;

}
.play-video .play .like-icon span{
	padding: 0 6px;
	margin-right: -6px;
	color: #fff
}
.play-video .play .like-icon i{
	font-size: 18px;
	padding: 0 8px;
/*	color: hsla(359,100%,63%,1.00);*/
}
.play-video .play .like-icon span:hover i{
	color: hsla(213,97%,50%,1.00);
}
.manager-user{
/*	background: hsla(359,100%,61%,1.00);*/
	overflow: hidden;
	padding-top: 15px;
	border-bottom: 1px hsla(0,0%,18%,1.00) solid;
	padding-bottom: 15px;
	border-top: 1px hsla(0,0%,18%,1.00) solid;
}
.profile-sub{
/*	background: hsla(237,100%,67%,1.00);*/
	width: 100%;
	overflow: hidden;
	display: flex;
	align-items: center;
}
.profile-sub .profile{
	width: 5%;
	float: left;
/*	background: hsla(136,100%,63%,1.00);*/
	display: flex;
	align-items: center;
	margin-right: 10px;
}
.profile-sub .profile img{
	width: 37px;
	height: 37px;
	border-radius: 50%;
}
.profile-sub .subscribe{
	float: right;
	text-align: right;
	width: 90%;
}
.profile-sub .user-name{
/*	background: hsla(359,100%,60%,1.00);*/
	font-family: Roboto,Dangrek;
	font-weight: 500;
	width: 30%;
}
.profile-sub .user-name span:nth-child(1){
	display: block;
	font-size: 15px;
	line-height: 25px;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: normal;
}
.profile-sub .user-name span:nth-child(2){
	font-size: 15px;
	color: hsla(0,0%,65%,1.00);
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: normal;
}
.profile-sub .user-name span i{
	padding-left: 5px;
	font-size: 13px;
	color: hsla(192,100%,50%,1.00);
}
.profile-sub .subscribe span{
	float: right;
/*	background: hsla(359,100%,58%,1.00);*/
	color: #fff;
	font-size: 20px;
	text-transform: uppercase;
	font-weight: 700;
	border-radius: 5px;
	user-select: none;
	margin-left: 10px;
	display: flex;
	justify-content: center;
	align-items: center;
}
.profile-sub .subscribe span i{
	padding-left: 20px;
	transition: 0.9s;
}
.manager-user .readmore{
/*	background: hsla(358,100%,86%,1.00);*/
	width: 100%;
	float: right;
	overflow: hidden;
	padding-left: 50px;
	height: auto;
	user-select: text;
	font-family:  Roboto,Dangrek;
	font-size: 15px;
/*	margin-top: 10px;*/
	font-weight: 500;
	padding-bottom: 0;
	margin-bottom: 0;
	margin-top: 20px;
}
.readmore .readtic{
	padding: 0;
	margin: 0;
	white-space: normal;
	height: 1px;
	background: hsla(359,100%,67%,1.00);
}
.readup{
	margin-top: 10px;
	float: left;
	user-select: none;
/*	background: hsla(359,100%,59%,1.00);*/
/*	display: none;*/
	color: hsla(0,0%,65%,1.00);
}
.readup:hover{
	color: hsla(359,96%,67%,1.00);
}
.readdown{
	margin-top: 8px;
	user-select: none;
	color: hsla(0,0%,65%,1.00);

	width: 150px;
}
.readdown:hover{
	color: hsla(359,96%,67%,1.00);
}
.description{
	display: none;
	margin-top: 0;
}
.manager-user .readmore .description span{
	white-space: pre-wrap;
}



























/*Thumbnail Right*/
.post-item{
	overflow: hidden;
/*	background: hsla(359,96%,59%,1.00);*/
	box-sizing: border-box;
	cursor: pointer;
	margin-bottom: 20px;
	
}
.post-item .thumbnail{
	float: left;
	width: 45%;
	height: 110px;
	position: relative;
}
.post-item .thumbnail img{
	object-fit: cover;
	width: 100%;
	height: 100%;
}
.post-item .title{
	float: left;
	width: 52%;
	margin-left: 2%;
/*	background: hsla(231,100%,60%,1.00);*/
	font-family: Roboto,Dangrek;
	overflow: hidden;
}
.post-item .title .text span{
	font-size: 15px;
	color: #fff;
	font-weight: 500;
	line-height: 23px;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: normal;
/*	background: hsla(359,100%,65%,1.00);*/
	padding-bottom: 3px;
}
.post-item .title .date-time{
	line-height: 22px;
	display: block;
	float: left;
	width: 80%;
/*	background: hsla(359,100%,63%,1.00);*/
}
.post-item .title .date-time span{
	font-size: 13px;
	color: hsla(0,0%,65%,1.00);
	float: left;
	display: block;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: normal;
}
.post-item .title .date-time span i{
	padding-left: 5px;
	font-size: 10px;
	color: hsla(192,100%,50%,1.00);
}
.post-item .title .date-time span a{
	color: hsla(0,0%,42%,1.00);
	float: left;
}
.post-item .title .date-time span a:hover{
	color: hsla(359,100%,60%,1.00);
}
.post-item .thumbnail .time-icon{
	position: absolute;
	right: 5px;
	top: 5px;
	color: #fff;
	opacity: 0;
}
.post-item .thumbnail .time-icon span{
	display: block;
}
.post-item .thumbnail .time-icon span i{
	padding: 8px;
	background: hsla(0,0%,0%,1.00);
	width: 30px;
	text-align: center;
	margin-bottom: 5px;
	border-radius: 3px;
	font-size: 13px;
}
.post-item:hover .time-icon{
	opacity: 100;
}
.post-item .thumbnail .time-video{
	position: absolute;
	bottom: 5px;
	right: 5px;
	color: #fff;
	font-size: 13px;
}
.play-video .post-item .thumbnail .time-video span{
	padding: 0px 5px;
	background: hsla(0,0%,0%,1.00);
	font-weight: 500;
	border-radius: 5px;
}

























/*Extra large devices (large desktops, 1200px and up)*/
@media (min-width: 1200px) {
	.manager-play:hover .back-up{
		right: 100px;
	}
}
/*Large devices (desktops, 992px and up)*/
@media (min-width: 992px) and (max-width: 1199.98px) {
	.user-name{
		margin-left: -10px;
	}
	.post-item .thumbnail{
		height: 120px;
	}
	.manager-user{
		margin-bottom: 20px;
	}.play-video .play .title .text span{
		font-size: 18px;
		line-height: 25px;
	}
	.post-item .title .text span{
		font-size: 16px;
		line-height: 25px;
	}
	.play-video .play .title .viwes span{
		font-size: 14px;
	}
	.post-item .title .date-time span{
	font-size: 13px;
	line-height: 25px;
}
	.profile-sub .profile{
	padding-right: 70px;
}
	.post-item .title .date-time{
		width: 100%;
	}
	.post-item .thumbnail{
		width: 55%;
	}
	.post-item .title{
		width: 42%;
	}
	.profile-sub .profile{
	padding-right: 50px;
}
	.profile-sub .user-name{
	width: 60%;
}
}
